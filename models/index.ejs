<html>
  <head>
    
    <link rel="stylesheet" href="app.css">
  </head>
  <body> 
    <h1>Driver and Car Management</h1>
    <nav>
      <a href="/company/new">many cars and many drivers</a>
    </nav>
    
    <ul>
    <% for (drivers) { %>
      <li>
        <%= drivers[i].name %>, 
        <%= drivers[i].age %>, 
        <%=drivers[i].image %>
      </li>
      <ul>
        <% for (cars) { %>
          <li>
            <%= cars[i].name %>, 
            <%= cars[i].model %>, 
            <%=cars[i].year %>
            <%= cars[i].image %>, 
          </li>
      <a href="/companey/<%= i %>/edit">SHOW</a>
      <a href="/company/<%= i %>/edit">EDIT</a>
      <form action="/company/<%= i %>?_method=DELETE" method="POST">
        <input type="submit" value="DELETE"/>
      </form>
      <% } %>
    </ul>
    </body>
</html>